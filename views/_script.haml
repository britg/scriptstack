%li.scriptItem{:id => script.id}
    .scriptSummary
        .scriptHandle |||
        .scriptSize
            %input.scriptMinActual{:type=>:hidden, :value=>script.minified_size}
            %input.scriptOriginalActual{:type=>:hidden, :value=>script.original_size}
            %span.scriptMinSize= script.minified_size/1024
            \/
            %span.scriptOriginalSize #{script.original_size/1024}
            kb
        %span.scriptName= script.name
        %span.scriptTags= script.tags.join(', ')
    
    .scriptDetail
        %a.deleteScript{:href=>"/scripts/delete/#{script.id}"} Remove 
        %table
            %tbody
                %tr
                    %td.scriptEditField
                        Filename 
                    %td
                        %input.scriptNameEdit{:id=>"nameEdit-#{script.id}",:type=>:text, :value => script.name}
                %tr
                    %td.scriptEditField
                        Tags 
                    %td
                        %input.scriptTagsEdit{:id=>"tagsEdit-#{script.id}", :type=>:text, :value => script.tags.join(', ')}
                %tr
                    %td.scriptEditField
                    %td
                        %a.viewScript{:href=>"/script/#{script.id}"} Code 
        .scriptCode
            %pre.code
